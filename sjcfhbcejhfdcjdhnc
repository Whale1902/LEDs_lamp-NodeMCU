  html += "<tr><td>Readings Voltage</td><td>3.8V</td></tr>";
  html += "<tr><td>Calibrated Voltage After Dividing</td><td>2.6V</td></tr>";
  html += "<tr><td>Calibrated Voltage Before Dividing</td><td>3.0V</td></tr>";
  html += "<tr><td>Calculated Battery Charge</td><td>85%</td></tr>";
  html += "</table>";

  html += "</form>";
  html += "<script>";
  html += "function readAnalogData() {";
  // Add your logic here to fetch voltage data using JavaScript (AJAX/fetch request)
